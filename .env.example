# ==========================================
# LeadGen Production Environment Variables
# ==========================================
# Copy this to .env and fill in real values.
# NEVER commit .env to version control.

# Flask secret key â€” generate with: python -c "import secrets; print(secrets.token_hex(32))"
LEADGEN_SECRET_KEY=change-me-to-a-random-64-char-hex-string

# Database path (for SQLite; ignored if using external DB)
LEADGEN_DB_PATH=/app/data/leadgen.db

# Output directory for CSV exports
LEADGEN_OUTPUT_DIR=/app/output

# Stripe (for automated license key generation on payment)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID_PRO=price_...

# Rate-limiting storage (use 'memory://' for single-instance dev)
# For production with multiple workers, use Redis:
# RATELIMIT_STORAGE_URI=redis://localhost:6379/0
RATELIMIT_STORAGE_URI=memory://

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com

# Set to 'production' in prod
FLASK_ENV=production
